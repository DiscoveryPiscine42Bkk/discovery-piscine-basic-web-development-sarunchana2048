<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <link rel="stylesheet" href="calc.css">
    <script>

        function calculate(){
            var left = parseFloat(document.getElementById('left').value);
            var right = parseFloat(document.getElementById('right').value);
            var operator = document.getElementById('Operator').value;

            console.log(right);

            if (isNaN(left) || left < 0 || isNaN(right) || right < 0){
                result = "Error :()"
            } else if (operator == '+'){
                result = left + right;
            } else if (operator == '-'){
                result = left - right;
            } else if (operator == '*'){
                result = left * right;
            } else if (operator == '%' && right !=0 ){
                result = left % right;
            } else if (operator == '/' && right != 0){
                result = left / right;
            } else {
                result = "It's over 9000!"
            }


            console.log(result);
            alert(result);

        }
        //alert every 30 seconds
        function Alertpopup() {
            alert("Please, use me...");
        }
        setInterval(Alertpopup, 30000);
    </script>
    <style>
        .dropdown{
            display: flex;
            justify-content: center;
            margin: auto;
            margin-top: 100px;
            height: 50px;
            width: 500px;
        }
        h1{
            text-align: center;
            margin-top: 100px
        }


    











    </style>
</head>
<body>
    <h1>Calculator</h1>
    <div class ="dropdown" >
        <input type="text" id="left" left="name" placeholder="Enter first value">
        <select name="Operator" id="Operator">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
            <option value="%">%</option>
        </select>
        <input type="number" id="right" left="name" placeholder="Enter second value">
        <input type="return" value="Try me!" onclick="calculate()">
    </div>
</body>
